{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/prove",
        "function": "prove"
      },
      {
        "source": "/api/store",
        "function": "store"
      },
      {
        "source": "/api/download",
        "function": "download"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
